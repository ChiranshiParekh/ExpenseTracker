<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/css/styles.css" rel="stylesheet" />
</head>
<body>

    @*Top Navigation Bar*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Expense Tracker", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-header">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Manage Category", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Manage Expense", "Index", "Expenses")</li>
                        <li>@Html.ActionLink("Manage Budget", "Edit", "Budgets")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @*Top Navigation Bar*@



    <div class="container body-content">
        
        @RenderBody()
        
        <hr />
        <footer>
            <p></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/lib/js/custom.js"></script>
    <script src="~/lib/js/jquery-1.11.1.min.js"></script>
    <script src="~/lib/js/bootstrap.min.js"></script>
    <script src="~/lib/js/chart.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
